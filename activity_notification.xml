<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hipplo.mypc.friendstration.Notification"
    android:clickable="true"
    android:background="#3789a7">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Button"
        android:id="@+id/Back"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#4caeba"
        android:textColor="#050505" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Notification"
        android:id="@+id/notify"
        android:layout_marginTop="22dp"
        android:checked="true"
        android:layout_below="@+id/Back"
        android:layout_alignParentStart="true"
        android:textColor="#fffefe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="You can set the set reminders about PMS and Menstratuation here!"
        android:id="@+id/message"
        android:layout_below="@+id/notify"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setdate"
        android:src="@drawable/ic_calender"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/message"
        android:layout_alignParentStart="true"
        android:background="#8ae3d1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notify me of my PMS!"
        android:id="@+id/option"
        android:layout_alignTop="@+id/setdate"
        android:layout_toEndOf="@+id/setdate"
        android:textColor="#fdfbfb" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>
