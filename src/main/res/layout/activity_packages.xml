<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hipplo.mypc.friendstration.Packages"
    android:background="#68d5b0">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Button"
        android:id="@+id/Back"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/purchase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy!"
        android:id="@+id/purchase"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Note: Purchasing Packages will be available in the Public Release"
        android:id="@+id/alpha_notes"
        android:layout_above="@+id/purchase"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Package Selection"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="=======O======="
        android:id="@+id/style1"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goddess Package"
        android:id="@+id/button"
        android:layout_below="@+id/Back"
        android:layout_alignEnd="@+id/Back" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queen Package"
        android:id="@+id/button2"
        android:layout_above="@+id/queen"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Princess Package"
        android:id="@+id/button3"
        android:layout_below="@+id/queen"
        android:layout_alignEnd="@+id/princess" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_love"
        android:id="@+id/god"
        android:layout_above="@+id/button2"
        android:layout_alignEnd="@+id/button" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/queen"
        android:src="@mipmap/ic_rule"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/god" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/princess"
        android:src="@mipmap/ic_me"
        android:layout_above="@+id/alpha_notes"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$14.95"
        android:id="@+id/large_price"
        android:layout_below="@+id/Back"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$9.95"
        android:id="@+id/mid_price"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$4.95"
        android:id="@+id/low_price"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/god_packages"
        android:id="@+id/god_text"
        android:layout_alignTop="@+id/god"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/queen_packages"
        android:id="@+id/queen_text"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/princess_packages"
        android:id="@+id/baby_text"
        android:layout_alignTop="@+id/princess"
        android:layout_alignParentStart="true" />

</RelativeLayout>
